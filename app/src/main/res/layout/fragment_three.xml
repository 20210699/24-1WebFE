                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:visibility="visible"
                    android:src="@drawable/level_1" />

                <TextView
                    android:id="@+id/level_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
